#DEBUG  =  -g 
DEBUG   =  
FLAGS  = -Wall -march=x86-64
#FLAGS  = -Wall -march=x86-64 -O3  
CC     = mpicc
INC    = -I.
LIB    = -L. -L/usr/lib64 -pthread -lm

default : 
	@echo "make programa" 

#-------------------------------------------------------------------------------
ejer1 : ejer1.c 
	$(CC) $(DEBUG) $(FLAGS) -o ejer1 ejer1.c  $(INC)

#-------------------------------------------------------------------------------
ejer2 : ejer2.c 
	$(CC) $(DEBUG) $(FLAGS) -o ejer2 ejer2.c  $(INC)

#-------------------------------------------------------------------------------
ejer3 : ejer3.c 
	$(CC) $(DEBUG) $(FLAGS) -o ejer3 ejer3.c  $(INC)

#-------------------------------------------------------------------------------
ejer4 : ejer4a.c 
	$(CC) $(DEBUG) $(FLAGS) -o ejer4a ejer4a.c  $(INC)

#-------------------------------------------------------------------------------
ejer5 : ejer5.c 
	$(CC) $(DEBUG) $(FLAGS) -o ejer5 ejer5.c  $(INC)

#-------------------------------------------------------------------------------
ejer6 : ejer6.c 
	$(CC) $(DEBUG) $(FLAGS) -o ejer6 ejer6.c  $(INC)

#-------------------------------------------------------------------------------				
clean:
	rm -f *.o *~ *.bck *.bak 

